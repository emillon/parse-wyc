(library
 (name parse_wyc)
 (wrapped false)
 (libraries menhirLib))

(ocamllex lexer)

(menhir
 (flags --strict --inspection --unused-tokens --table --cmly)
 (modules parser))

(rule
 (targets parser_recover.ml)
 (deps parser.cmly)
 (action
  (with-stdout-to
   %{targets}
   (run ../menhir-recover/main.exe parser.cmly))))
